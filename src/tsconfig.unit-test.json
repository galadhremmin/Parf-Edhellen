{
    "compilerOptions": {
        "baseUrl": "./resources/assets/ts",
        "outDir": "./public/build",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "types": [
            "luxon",
            "react",
            "react-dom",
            "react-redux",
            "redux",
            "mocha",
            "chai"
        ],
        "paths": {
            "@root/*": [
                "*"
            ]
        }
    },
    "include": [
        "./resources/assets/ts/**/*._spec.{ts,tsx}"
    ],
    "exclude": [
        "node_modules"
    ]
}
