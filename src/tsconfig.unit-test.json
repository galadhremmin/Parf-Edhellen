{
    "compilerOptions": {
        "baseUrl": "./resources/assets/ts",
        "outDir": "./public/build",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "CommonJS",
        "target": "ESNext",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "esModuleInterop": true,
        "strict": false,
        "pretty": true,
        "types": [
            "luxon",
            "react",
            "react-dom",
            "react-redux",
            "redux",
            "node"
        ],
        "paths": {
            "@root/*": [
                "*"
            ]
        },
    },
    "include": [
        "./resources/assets/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "build/**/*"
    ]
}
