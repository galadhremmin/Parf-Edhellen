{
    "compilerOptions": {
        "outDir": "./public/build",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./resources/assets/ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}