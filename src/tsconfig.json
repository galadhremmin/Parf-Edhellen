{
    "compilerOptions": {
        "outDir": "./public/build",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "react",
            "react-dom",
            "react-redux",
            "redux",
            "moment",
            "inversify",
            "moment",
            "mocha",
            "chai"
        ]
    },
    "include": [
        "./resources/assets/ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}