{
    "compilerOptions": {
        "baseUrl": "./resources/assets/ts",
        "outDir": "./public/build",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES2020",
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": false,
        "moduleResolution": "node",
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "importsNotUsedAsValues": "remove",
        "importHelpers": true,
        "skipLibCheck": true,
        "types": [
            "luxon",
            "react",
            "react-dom",
            "react-redux",
            "redux",
            "node"
        ],
        "paths": {
            "@root/*": [
                "*"
            ]
        }
    },
    "include": [
        "./resources/assets/ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
